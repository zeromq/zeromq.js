{
  "arrowParens": "avoid",
  "bracketSpacing": false,
  "endOfLine": "lf",
  "printWidth": 80,
  "proseWrap": "always",
  "tabWidth": 2,
  "trailingComma": "all",
  "semi": false,
  "singleQuote": false,
  "overrides": [
    {
      "files": ["pnpm-lock.yaml", "*.md"],
      "options": {
        "requirePragma": true
      }
    }
  ]
}
