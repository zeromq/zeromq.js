{
  "name": "zeromq",
  "version": "5.2.4",
  "description": "ZeroMQ for node.js",
  "main": "index",
  "gypfile": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zeromq/zeromq.js.git"
  },
  "dependencies": {
    "nan": "2.14.0",
    "node-gyp-build": "^4.2.3"
  },
  "devDependencies": {
    "electron-mocha": "^6.0.0",
    "jsdoc": "^3.5.4",
    "mocha": "^5.0.0",
    "nyc": "^12.0.2",
    "prebuildify": "^4.1.2",
    "semver": "^5.4.1",
    "should": "^13.0.0"
  },
  "engines": {
    "node": ">=6.0"
  },
  "scripts": {
    "prepare": "npm run build:libzmq",
    "install": "node-gyp-build || npm run build:libzmq",
    "build:libzmq": "node scripts/preinstall.js && node-gyp rebuild",
    "prebuildify": "prebuildify -t 15.0.0 -t 14.0.0 -t 12.0.0 -t electron@6.0.0 -t electron@9.4.4 --strip",
    "prebuildify-ia32": "prebuildify --arch=ia32 -t 15.0.0 -t 14.0.0 -t 12.0.0 -t electron@6.0.0 -t electron@9.4.4 --strip",
    "build:docs": "jsdoc -R README.md -d docs lib/*.js",
    "test": "mocha --expose-gc --slow 300",
    "test:electron": "electron-mocha --slow 300",
    "precoverage": "nyc npm run test",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov"
  },
  "keywords": [
    "zeromq",
    "zmq",
    "0mq",
    "Ã¸mq",
    "libzmq",
    "native",
    "binding",
    "addon"
  ],
  "license": "MIT",
  "author": "Justin Tulloss <justin.tulloss@gmail.com> (http://justin.harmonize.fm)"
}
